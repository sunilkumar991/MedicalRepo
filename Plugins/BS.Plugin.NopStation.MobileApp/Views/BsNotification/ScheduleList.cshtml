@using Nop.Core.Infrastructure
@{Layout = "_AdminLayout";}
@{
    var defaultGridPageSize = EngineContext.Current.Resolve<Nop.Core.Domain.Common.AdminAreaSettings>().DefaultGridPageSize;
    var gridPageSizes = EngineContext.Current.Resolve<Nop.Core.Domain.Common.AdminAreaSettings>().GridPageSizes;

    //page title
    ViewBag.Title = T("Admin.Plugin.Misc.BsNotificaton.Schedules.Manage").Text;
    Html.SetActiveMenuItemSystemName("Mobile Notification App Schedules");

}
<form asp-controller="BsNotificationAdmin" asp-action="DeviceList" method="post">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Plugin.Misc.BsNotificaton.Schedules.Header")
        </h1>
        <div class="pull-right">
            <a asp-action="CreateSchedule" class="btn bg-blue">
                <i class="fa fa-plus-square"></i>
                @T("Admin.Common.AddNew")
            </a>
        </div>
    </div>

    <div class="content">
        <div class="form-horizontal">
            <div class="panel-group">
                <div class="panel panel-default panel-search">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div id="schedule-grid"></div>

                            <script>
                                $(document).ready(function () {
                                    $("#schedule-grid").kendoGrid({
                                        dataSource: {
                                            type: "json",
                                            transport: {
                                                read: {
                                                    url: "@Html.Raw(Url.Action("ScheduleList", "BsNotificationAdmin", new { area = "Admin" }))",
                                                    type: "POST",
                                                    dataType: "json"

                                                },
                                                destroy: {
                                                    url: "@Html.Raw(Url.Action("DeleteSchedule", "BsNotificationAdmin", new { area = "Admin" }))",
                                                    type: "POST",
                                                    dataType: "json"
                                                }
                                            },
                                            schema: {
                                                data: "Data",
                                                total: "Total",
                                                errors: "Errors",

                                            },
                                            error: function(e) {
                                                display_kendoui_grid_error(e);
                                                // Cancel the changes
                                                this.cancelChanges();
                                            },
                                            pageSize: @(defaultGridPageSize),
                                            serverPaging: true,
                                            serverFiltering: true,
                                            serverSorting: true
                                        },
                                        pageable: {
                                            refresh: true,
                                            pageSizes: [@(gridPageSizes)]
                                        },
                                        editable: {
                                            confirmation: true,
                                            mode: "inline"
                                        },
                                        scrollable: false,
                                        columns: [{
                                            field: "Id",
                                            title: "Schedule Id",
                                            width: 30
                                        },{
                                            field: "GroupName",
                                            title: "Group Name",
                                            width:100,
                                        },
                                            {
                                                field: "Priority",
                                                title: "Priority",
                                                width: 30,
                                                headerAttributes: { style: "text-align:center" },

                                            }
                                            ,
                                        {
                                            field: "Message",
                                            title: "Message",
                                            width: 200,
                                            headerAttributes: { style: "text-align:center" },

                                        },
                                            {
                                                field: "NotificationType",
                                                title: "Notification Type",
                                                width: 200,
                                                headerAttributes: { style: "text-align:center" },

                                            },
                                        {
                                            field: "ItemId",
                                            title: "Item Id",
                                            width: 200,
                                            headerAttributes: { style: "text-align:center" },

                                        }

                                            ,

                                            {
                                                field: "IsQueued",
                                                title: "Is Queued",
                                                width: 30
                                            },{
                                                field: "ErrorLog",
                                                title: "Error Log",
                                                width:100,
                                            },
                                            {
                                                field: "QueuedCount",
                                                title: "Queued Count",
                                                width: 30,
                                                headerAttributes: { style: "text-align:center" },

                                            },  {
                                                field: "CreatedOnUtc",
                                                title: "Created On",
                                                width: 100,
                                                type: "date",
                                                format: "{0:G}",
                                                headerAttributes: { style: "text-align:center" },

                                            },  {
                                                field: "SendingWillStartOnUtc",
                                                title: "Start Sending On",
                                                width: 100,
                                                type: "date",
                                                format: "{0:G}",
                                                headerAttributes: { style: "text-align:center" },

                                            },
                                            {
                                                field: "Id",
                                                title: "@T("Admin.Common.Edit")",
                                                width: 100,
                                                template: '<a class="btn btn-default" href="EditSchedule/#=Id#"><i class="fa fa-pencil"></i> @T("Admin.Common.Edit")</a>'
                                            },
                                            @*{
                                                field: "Id",
                                                title: "@T("Admin.Common.Delete")",
                                                width: 100,
                                                template: '<a href="DeleteSchedule/#=Id#">@T("Admin.Common.Delete")</a>'
                                                }*@
                                                {
                                                command: [ {
                                                    name: "destroy",
                                                    text: "@T("Admin.Common.Delete")"
                                                },
                                                ],
                                                width: 200,
                                                filterable: false
                                            }
                                            ]
                                    });
                                });
                            </script>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
