@using Nop.Core.Infrastructure
@using BS.Plugin.NopStation.MobileApp.Models;
@{
    var defaultGridPageSize = EngineContext.Current.Resolve<Nop.Core.Domain.Common.AdminAreaSettings>().DefaultGridPageSize;
    var gridPageSizes = EngineContext.Current.Resolve<Nop.Core.Domain.Common.AdminAreaSettings>().GridPageSizes;

    //page title
    ViewBag.Title = T("Admin.Plugin.Misc.BsNotificaton.Device.Manage").Text;
    Layout = "_AdminLayout";
    Html.SetActiveMenuItemSystemName("Mobile Notification App Device List");
}
@model BS.Plugin.NopStation.MobileApp.Models.DeviceListModel
<div class="content-header clearfix">
    <h1 class="pull-left">
        @T("Admin.Plugin.Misc.BsNotificaton.Device.Header")
    </h1>
</div>

<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default panel-search">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-5">
                            <div class="form-group">
                                <div class="col-md-4">
                                    <nop-label asp-for="CustomerId" />
                                </div>
                                <div class="col-md-8">
                                    <nop-editor asp-for="CustomerId">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-4">
                                    <nop-label asp-for="DeviceToken" />
                                </div>
                                <div class="col-md-8">
                                    <nop-editor asp-for="DeviceToken">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-4">
                                    <nop-label asp-for="DeviceType" />
                                </div>
                                <div class="col-md-8">
                                    @Html.DropDownList("DeviceType", Model.AvailableDeviceTypes, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-7 col-md-offset-5">
                            <button type="button" id="search-customers" class="btn btn-primary btn-search">
                                <i class="fa fa-search"></i>
                                @T("Admin.Common.Search")
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div id="device-grid"></div>
                    <script>
                            $(document).ready(function () {
                                $("#device-grid").kendoGrid({
                                    dataSource: {
                                        type: "json",
                                        transport: {
                                            read: {
                                                url: "@Html.Raw(Url.Action("DeviceList", "BsNotificationAdmin", new {area = "Admin"}))",
                                                type: "POST",
                                                dataType: "json",
                                                data: additionalData

                                            },
                                            destroy: {
                                                url: "@Html.Raw(Url.Action("DeleteDevice", "BsNotificationAdmin", new {area = "Admin" }))",
                                                type: "POST",
                                                dataType: "json"
                                            }
                                        },
                                        schema: {
                                            data: "Data",
                                            total: "Total",
                                            errors: "Errors",

                                        },
                                        error: function(e) {
                                            display_kendoui_grid_error(e);
                                            // Cancel the changes
                                            this.cancelChanges();
                                        },
                                        pageSize: @(defaultGridPageSize),
                                        serverPaging: true,
                                        serverFiltering: true,
                                        serverSorting: true
                                    },
                                    pageable: {
                                        refresh: true,
                                        pageSizes: [@(gridPageSizes)]
                                    },
                                    editable: {
                                        confirmation: true,
                                        mode: "inline"
                                    },
                                    scrollable: false,
                                    columns: [
                                    {
                                        field: "CustomerId",
                                        title: "Customer Id",
                                        width: 30
                                    }, {
                                        field: "DeviceToken",
                                        title: "Device Token",
                                        width: 30
                                    }, {
                                        field: "DeviceType",
                                        title: "Device Type",
                                        width: 30,
                                    }, {
                                        field: "CustomerName",
                                        title: "Customer Name",
                                        width: 50,
                                    }, {
                                        field: "SubscriptionId",
                                        title: "SubscriptionId",
                                        width: 100,
                                        headerAttributes: { style: "text-align:center" },
                                    }, {
                                        field: "CreatedOnUtc",
                                        title: "Created On",
                                        width: 40,
                                        type: "date",
                                        format: "{0:G}",
                                        headerAttributes: { style: "text-align:center" },
                                    }, {
                                        field: "UpdatedOnUtc",
                                        title: "Updated On",
                                        width: 40,
                                        type: "date",
                                        format: "{0:G}",
                                        headerAttributes: { style: "text-align:center" },
                                    },
                                    @*{
                                        field: "Id",
                                        title: "@T("Admin.Common.Edit")",
                                        width: 100,
                                        template: '<a class="btn btn-default" href="EditDevice/#=Id#"><i class="fa fa-pencil"></i> @T("Admin.Common.Edit")</a>'
                                    },*@
                                    {
                                        command: [
                                            {
                                                name: "destroy",
                                                text: "@T("Admin.Common.Delete")"
                                                },
                                            ],
                                            width: 200,
                                            filterable: false
                                        }
                                    ]
                                });
                            });
                    </script>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
    $('#search-customers').click(function () {
        //search
        var grid = $('#device-grid').data('kendoGrid');
        grid.dataSource.page(1); //new search. Set page size to 1
        grid.dataSource.read();
        return false;
    });
    });

    function additionalData() {
        return {
            CustomerId: $('#CustomerId').val(),
            DeviceToken: $('#DeviceToken').val(),
            DeviceType: $('#DeviceType').val()
        };
    }
</script>
