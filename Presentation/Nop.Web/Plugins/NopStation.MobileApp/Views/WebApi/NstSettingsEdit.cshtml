@model BS.Plugin.NopStation.MobileWebApi.Models.NstSettingsModel.Nst_ConfigurationSettings
@{
    Layout = "_AdminLayout";
    ViewBag.Title = T("Plugins.NopMobile.WebApi.NST").Text;
    Html.SetActiveMenuItemSystemName("NopStationSecrateToken");
}
@using Nop.Web.Framework;
@using Nop.Core.Infrastructure;
@using System.Globalization;
@await Component.InvokeAsync("StoreScopeConfiguration")
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Plugins.NopMobile.WebApi.NST")
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a href=" @Url.Action("NopStationSecrateToken", "MobileWebApiConfiguration")">back to settings</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue"><i class="fa fa-floppy-o"></i>@T("Admin.Common.Save")</button>
        </div>
    </div>
    <div class="raw form-horizontal clearfix">
        <div class="col-md-12">
            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="panel-body">
                                <div class="form-group">
                                    <div class="col-md-3">
                                    </div>
                                    <div class="col-md-9">
                                        @Html.HiddenFor(model => model.EditMode, new { @value = true })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-3">
                                        <nop-label asp-for="NST_KEY" />
                                    </div>
                                    <div class="col-md-9">
                                        <nop-editor asp-for="NST_KEY" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-3">
                                        <nop-label asp-for="NST_SECRET" />
                                    </div>
                                    <div class="col-md-9">
                                        <nop-editor asp-for="NST_SECRET" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
