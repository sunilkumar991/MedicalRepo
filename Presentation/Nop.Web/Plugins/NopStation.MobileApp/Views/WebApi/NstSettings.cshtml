@model BS.Plugin.NopStation.MobileWebApi.Models.NstSettingsModel.Nst_ConfigurationSettings
@{
    Layout = "_AdminLayout";
    ViewBag.Title = T("Plugins.NopMobile.WebApi.NST").Text;
    Html.SetActiveMenuItemSystemName("NopStationSecrateToken");
}
@using Nop.Web.Framework;
@using Nop.Core.Infrastructure;
@using System.Globalization;
@await Component.InvokeAsync("StoreScopeConfiguration")
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Plugins.NopMobile.WebApi.NST")
        </h1>
        <div class="pull-right">
            <a href = "@Url.Action("NopStationSecrateTokenEdit", "MobileWebApiConfiguration")" class="btn bg-blue"><i class="fa fa-pencil-square-o"></i>Edit</a>
        </div>
    </div>
    <div class="raw form-horizontal clearfix">
        <div class="col-md-12">
            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="panel-body">
                                <div class="form-group">
                                    <div class="col-md-3">
                                        <nop-label asp-for="NST_KEY" />
                                    </div>
                                    <div class="col-md-9">
                                        <nop-editor asp-for="NST_KEY" readonly="readonly" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-3">
                                        <nop-label asp-for="NST_SECRET" />

                                    </div>
                                    <div class="col-md-9">
                                        @*@Html.TextBoxFor(model => model.NST_SECRET, new {@readonly = "readonly"})*@
                                        <nop-editor asp-for="NST_SECRET" readonly="readonly" />
                                        <span asp-validation-for="NST_SECRET"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}